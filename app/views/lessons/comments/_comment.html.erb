<div class="card">
    <div class="card-body">
        <%= comment.content %>
    </div>
    <div class="card-footer">
        <%= link_to comment.user, user_path(comment.user) %>
        <%= comment.created_at.strftime("%d/%m/%Y %H:%m") %>
        (#{time_ago_in_words(comment.created_at)})
    </div>
</div>