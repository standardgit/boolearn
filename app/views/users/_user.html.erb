<div class="card">
    <div class="card-header">
        <i class="fa fa-user"></i>
        <% if user.online? %>
            <i class="fa fa-circle text-success" aria-hidden="true"></i>
        <% else %>
            <i class="fa fa-circle text-danger" aria-hidden="true"></i>
        <% end %>
        <%= link_to user.email, user_path(user) %>
    </div>
    <div class="card-footer">
        Signed up
        <%= time_ago_in_words(user.created_at) %>
        ago
    </div>
    <div class="card-footer">
        <div class="row"></div>
        <b><%= "sign_in_count".humanize + ":" %></b>
        <%= user.sign_in_count %>
        <div class="row"></div>
        <b><%= "current_sign_in_at".humanize + ":" %></b>
        <%= user.current_sign_in_at %>
        <div class="row"> </div>
        <b><%= "last_sign_in_at".humanize + ":" %></b>
        <%= user.last_sign_in_at %>
        <div class="row"></div>
        <b><%= "current_sign_in_ip".humanize + ":"%></b>
        <%= user.current_sign_in_ip %>
        <div class="row"></div>
        <b><%= "last_sign_in_ip".humanize + ":"%></b>
        <%= user.last_sign_in_ip %>
    </div>
    <div class="card-footer">
        <b>Courses created:</b>
        <%= user.courses_count %>
        <b>Enrollments:</b>
        <%= user.enrollments_count %>
    <div class="card-footer">
        confirmed email?
        <% if user.confirmed_at.present? %>
            <div class="badge badge-success">yes</div>
        <% else %>
            <div class="badge badge-danger">no</div>
        <% end %>
    </div>
    <div class="card-footer">
        <% user.roles.each do |role| %>
            <div class="badge badge-info">
                <%= role.name %>
            </div>
        <% end %>
        <% if policy(user).edit? %>
            <%= link_to 'Edit Role', edit_user_path(user), class: "btn btn-sm btn-warning" %>
        <% end %>
    </div>
</div>