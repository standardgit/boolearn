<% if current_user %>
    <%= current_user.email%>
    <%= link_to 'Account settings', edit_user_registration_path %>
    <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
<% else %>
    <%= link_to 'Sign up', new_user_registration_path %>
    <%= link_to 'Log in', new_user_session_path %>
<% end %>


<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <% if current_user %>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="<%= 'active font-weight-bold' if current_page?(root_path) %> nav-item">
                        <%= link_to root_path, class: 'nav-link' do %>
                            <i class="fa fa-home" aria-hidden="true"></i>
                            Home
                        <% end %>
                    </li>
                    <li class="<%= 'active font-weight-bold' if current_page?(courses_path) %> nav-item">
                        <%= link_to root_path, class: 'nav-link' do %>
                            <i class="fa fa-book" aria-hidden="true"></i>
                            Courses
                        <% end %>
                    </li>
                    <form class="d-flex">
                        <div class="form-inline my-2 my-lg-0">
                            <%= form_tag(root_path, method: :get) do %>
                                <div class="input-group">
                                <%= text_field_tag :name, params[:name], autocomplete: 'off', placeholder: 'search', class: 'form-control' %>
                                <span class="input-group-append">
                                    <button class="btn btn-primary.btn-sm" type= "submit">
                                        <span><i class="fa fa-search" aria-hidden="true"></i></span>
                                    </button>
                                </span>
                                </div>
                            <% end %>
                        </div>
                    </form>
                    <ul class="navbar-nav me-right mb-2 mb-lg-0">
                        <li class="<%= 'active font-weight-bold' if current_page?(root_path) %> nav-item">
                            <%= link_to root_path class: "nav-link" do %>
                               <i class="fa fa-home" aria-hidden="true"></i>
                               Anothe link 
                            <% end %>
                        </li>
                    </ul>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <b><%= current_user.email %></b>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <%= link_to edit_user_registration_path, class: "dropdown-item" do %>
                                <i class="fa fa-cog" aria-hidden="true"></i>
                                <b> Account setting </b>
                            <% end %>
                            <%= link_to destroy_user_session_path,method: :delete, class: "dropdown-item" do %>
                                <i class="fa fa-cog" aria-hidden="true"></i>
                                <b> Sign out </b>
                            <% end %>
                        </ul>
                    </li>
                </ul>
            <% else %>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <%= link_to "sign up", new_user_registration_path, class:'nav-link' %>
                    </li>
                     <li class="nav-item">
                        <%= link_to "Log in", new_user_session_path, class:'nav-link' %>
                    </li>
                </ul>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                </li>
            <% end %>
        </div>
    </div>
</nav>